{
  "compilerOptions": {
    "lib": ["es6", "dom", "scripthost"],
    "types": ["mocha"],
    "stripInternal": true,
    "typeRoots": ["./node_modules/@types"],
    "noUnusedLocals": true,
    "strict": true,
    "target": "es6",
    "module": "es2020",
    "newLine": "lf",
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node"
  },
  "include": ["*/src/*.ts", "*/test/*.ts", "demo/demo.ts"],
}
